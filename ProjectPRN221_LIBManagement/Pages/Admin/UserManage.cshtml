@page
@model ProjectPRN221_LIBManagement.Pages.Admin.UserManageModel
@using ProjectPRN221_LIBManagement.Models
@{
}

<style>
    .error-message {
        text-align: center;
        font-weight: bold;
        font-size: larger;
    }

    .filter {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
    }

    .filter1 {
        display: flex;
        align-items: center;
    }

    .texta {
        margin-right: 10px;
        font-weight: bold;
        font-size: 18px;
    }

    select {
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .filter select {
        margin-right: 10px;
    }

        .filter select:hover {
            background-color: #f5f5f5;
        }

    select:hover {
        background-color: #f5f5f5;
    }

    .status-btn {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
        border-radius: 0.2rem;
        min-width: 80px;
        transition: all 0.3s ease;
    }

        .status-btn:hover {
            opacity: 0.85;
            transform: scale(1.05);
        }

    .filter1 {
        display: flex;
        align-items: center;
        justify-content: space-between; /* Thêm justify-content */
        width: 100%; /* Đảm bảo container chiếm hết chiều rộng */
    }

    .filter-group {
        display: flex;
        align-items: center;
        gap: 15px; /* Khoảng cách giữa các phần tử */
    }

    .search-p {
        display: flex;
        align-items: center;
        max-width: 300px; /* Giới hạn chiều rộng của thanh search */
    }

        .search-p input {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .search-p .input-group-text {
            background: transparent;
            border: none;
            padding-left: 10px;
        }
</style>

<div class="dashboard-wrapper">
    <div class="container-fluid dashboard-content">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12" style="margin-top: 93px;">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }

                <div class="filter1">
                    <form asp-page="UsersManage" method="get">
                        <div class="filter">
                            <span class="texta" style="color: #454444f7;">Filter:</span>

                            <select name="roleId">
                                <option value="0">Select Role</option>
                                @foreach (var role in Model.roles)
                                {
                                    <option value="@role.RoleId" selected="@(role.RoleId == Model.roleId)">@role.RoleName</option>
                                }
                            </select>

                            <select name="statusFilter">
                                <option value="">All Status</option>
                                <option value="0" selected="@(Model.statusFilter == 0)">Active</option>
                                <option value="1" selected="@(Model.statusFilter == 1)">Banned</option>
                            </select>

                            <input type="submit" value="Filter" class="btn btn-primary" />
                        </div>
                    </form>

                    <div>
                        <a asp-page="AddUser" class="btn btn-danger" style="margin-left: -430px; margin-top: -13px">Add User</a>
                    </div>

                    <div class="input-group rounded search-p">
                        <form asp-page="UserManage" method="get" style="display: flex; align-items: center;">
                            <input type="hidden" name="roleId" value="@Model.roleId" />
                            <input type="hidden" name="statusFilter" value="@Model.statusFilter" />
                            <input type="search"
                                   name="searchString"
                                   class="form-control rounded"
                                   value="@Model.search"
                                   placeholder="Search by Name"
                                   aria-label="Search"
                                   aria-describedby="search-addon" />
                            <span class="input-group-text border-0" id="search-addon">
                                <i class="fas fa-search"></i>
                            </span>
                        </form>
                    </div>
                </div>

                <div class="card">
                    <h5 class="card-header">List User</h5>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table" id="userTable">
                                <thead class="bg-light">
                                    <tr class="border-0">
                                        <th class="border-0" onclick="sortTable(0)">UserID</th>
                                        <th class="border-0" onclick="sortTable(1)">FullName</th>
                                        <th class="border-0" onclick="sortTable(2)">Email</th>
                                        <th class="border-0" onclick="sortTable(3)">Role</th>
                                        <th class="border-0" onclick="sortTable(4)">PhoneNumber</th>
                                        <th class="border-0" onclick="sortTable(5)">Address</th>
                                        <th class="border-0" onclick="sortTable(6)">Date Of Birth</th>
                                        <th class="border-0" onclick="sortTable(7)">Status</th>
                                        <th class="border-0">Feature</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var temp in Model.users)
                                    {
                                        <tr>
                                            <td>@temp.UserId</td>
                                            <td>@temp.FullName</td>
                                            <td>@temp.Email</td>
                                            <td>@temp.RoleNavigation.RoleName</td>
                                            <td>@temp.PhoneNumber</td>
                                            <td>@temp.Address</td>
                                            <td>@temp.DateOfBirth?.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <form method="post" asp-page-handler="ToggleStatus"
                                                      asp-route-userId="@temp.UserId"
                                                      onsubmit="return confirm('Are you sure you want to @((temp.IsBan ?? false) ? "unban" : "ban") this user?');">
                                                    <button type="submit"
                                                            class="btn status-btn @Model.GetStatusClass(temp.IsBan ?? false)">
                                                        @Model.GetStatusText(temp.IsBan ?? false)
                                                    </button>
                                                </form>
                                            </td>
                                            <td>
                                                <a class="fas fa-edit edit-icon"
                                                   asp-page="EditUser"
                                                   asp-route-id="@temp.UserId"></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function sortTable(colIndex) {
            var table = document.getElementById('userTable');
            var rows = table.rows;
            var switching = true;
            var shouldSwitch = false;
            var dir = 'asc';

            while (switching) {
                switching = false;
                for (var i = 1; i < rows.length - 1; i++) {
                    shouldSwitch = false;
                    var x = rows[i].getElementsByTagName('td')[colIndex];
                    var y = rows[i + 1].getElementsByTagName('td')[colIndex];

                    if (colIndex === 0) {
                        if (dir == 'asc') {
                            if (parseInt(x.innerHTML) > parseInt(y.innerHTML)) {
                                shouldSwitch = true;
                                break;
                            }
                        } else if (dir == 'desc') {
                            if (parseInt(x.innerHTML) < parseInt(y.innerHTML)) {
                                shouldSwitch = true;
                                break;
                            }
                        }
                    } else {
                        if (dir == 'asc') {
                            if (x.innerHTML.toLowerCase() > y.innerHTML.toLowerCase()) {
                                shouldSwitch = true;
                                break;
                            }
                        } else if (dir == 'desc') {
                            if (x.innerHTML.toLowerCase() < y.innerHTML.toLowerCase()) {
                                shouldSwitch = true;
                                break;
                            }
                        }
                    }
                }
                if (shouldSwitch) {
                    rows[i].parentNode.insertBefore(rows[i + 1], rows[i]);
                    switching = true;
                } else {
                    if (dir == 'asc') {
                        dir = 'desc';
                    } else {
                        dir = 'asc';
                    }
                }
            }
        }
    </script>
}