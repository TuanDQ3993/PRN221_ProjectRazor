@page
@model ProjectPRN221_LIBManagement.Pages.Home.ShopDetailsModel
@{
    Layout = "_UserLayout";
}
<style>
    :root {
        --primary-color: #4CAF50;
        --primary-dark: #388E3C;
        --primary-light: #C8E6C9;
        --text-color: #333;
        --bg-color: #f8f9fa;
    }

    .book-container {
        background: var(--bg-color);
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0,0,0,0.05);
    }

    .book-main-content {
        display: flex;
        min-height: 350px;
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    }

    .book-image-container {
        flex: 1;
        position: relative;
        overflow: hidden;
    }

    .book-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .book-details-container {
        flex: 1;
        padding: 2.5rem;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .book-title {
        font-size: 2.5rem;
        color: var(--text-color);
        margin-bottom: 1.5rem;
    }

    .book-info {
        font-size: 1.1rem;
        color: #666;
        margin-bottom: 1rem;
    }

        .book-info i {
            width: 25px;
            color: var(--primary-color);
        }

    .add-to-cart-btn {
        background: var(--primary-color);
        color: white;
        padding: 1rem 2rem;
        border: none;
        border-radius: 25px;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
        margin-top: auto;
    }

        .add-to-cart-btn:hover {
            background: var(--primary-dark);
            transform: translateY(-2px);
        }

    .description-container {
        background: white;
        padding: 2rem;
        border-radius: 10px;
        margin-top: 2rem;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    }

    .nav-tabs {
        border: none;
    }

    .nav-link {
        color: #666;
        font-size: 1.1rem;
        padding: 1rem 2rem;
        border: none;
        border-radius: 25px;
        margin-right: 1rem;
        transition: all 0.3s ease;
    }

        .nav-link.active {
            background: var(--primary-color);
            color: white;
        }

    .search-container {
        background: white;
        border-radius: 10px;
        padding: 1.5rem;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    }

    .search-input {
        border: 1px solid #eee;
        border-radius: 25px;
        padding: 0.8rem 1.5rem;
        font-size: 1rem;
    }

    .search-btn {
        background: var(--primary-color);
        color: white;
        border: none;
        border-radius: 25px;
        padding: 0.8rem 1.5rem;
        transition: all 0.3s ease;
    }

        .search-btn:hover {
            background: var(--primary-dark);
        }

    .categories-container {
        background: white;
        border-radius: 10px;
        padding: 1.5rem;
        margin-top: 2rem;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    }

    .categories-title {
        color: var(--text-color);
        margin-bottom: 1.5rem;
        font-size: 1.3rem;
    }

    .category-item {
        display: flex;
        justify-content: space-between;
        padding: 0.8rem 0;
        border-bottom: 1px solid #eee;
        transition: all 0.3s ease;
    }

        .category-item:hover {
            color: var(--primary-color);
            transform: translateX(5px);
        }

        .category-item a {
            color: inherit;
            text-decoration: none;
        }

    .related-books {
        margin-top: 4rem;
    }

    .related-title {
        font-size: 2rem;
        color: var(--text-color);
        margin-bottom: 2rem;
    }

    .book-card {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        transition: transform 0.3s ease;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        height: 100%;
    }

        .book-card:hover {
            transform: translateY(-5px);
        }

    .book-card-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .book-card-content {
        padding: 1.5rem;
    }

    .view-detail-btn {
        background: var(--primary-color);
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        transition: all 0.3s ease;
        text-decoration: none;
        font-size: 0.9rem;
        display: inline-block;
        margin-top: 1rem;
    }

        .view-detail-btn:hover {
            background: var(--primary-dark);
            color: white;
        }
</style>
<div class="container-fluid py-5 mt-5">
    <div class="container py-5">
        <div class="row g-4 mb-5">
            <div class="col-lg-8 col-xl-9">
                <div class="book-container">
                    <div class="book-main-content">
                        <div class="book-image-container">
                            <img src="@Model.BookDetails.Image" class="book-image" alt="Book Cover">
                        </div>
                        <div class="book-details-container">
                            <div>
                                <h1 class="book-title">@Model.BookDetails.Title</h1>
                                <div class="book-info">
                                    <p><i class="fas fa-bookmark"></i> Category: @Model.BookDetails.Category.CategoryName</p>
                                    <p><i class="fas fa-user"></i> Author: @Model.BookDetails.Author.AuthorName</p>
                                    <p><i class="fas fa-building"></i> Publisher: @Model.BookDetails.Publisher.PublisherName</p>
                                </div>
                            </div>
                            <a href="#" class="add-to-cart-btn">
                                <i class="fas fa-shopping-cart me-2"></i>Add to Cart
                            </a>
                        </div>
                    </div>

                    <div class="description-container">
                        <nav>
                            <div class="nav nav-tabs mb-4">
                                <button class="nav-link active">Description</button>
                            </div>
                        </nav>
                        <div class="tab-content">
                            <div class="tab-pane active">
                                <p>@Model.BookDetails.Description</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-xl-3">
                <div class="search-container">
                    <div class="input-group">
                        <input type="search" class="form-control search-input" placeholder="Search books...">
                        <button class="search-btn">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
                <div class="categories-container">
                    <h4 class="categories-title">Categories</h4>
                    <div class="categories-list">
                        @foreach (var cate in Model.Categories)
                        {
                            <div class="category-item">
                                <a href="#"><i class="fas fa-book me-2"></i>@cate.CategoryName</a>
                                <span>(@cate.Books.Count)</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="related-books">
            <h2 class="related-title">Related Books</h2>
            <div class="row g-4">
                @if (Model.RelatedBook != null && Model.RelatedBook.Any())
                {
                    @foreach (var book in Model.RelatedBook)
                    {
                        <div class="col-lg-4">
                            <div class="book-card">
                                <img src="@(string.IsNullOrEmpty(book.Image) ? "img/best-product-1.jpg" : book.Image)"
                                     class="book-card-image" alt="@book.Title">
                                <div class="book-card-content">
                                    <h5 class="fw-bold text-truncate mb-3">@book.Title</h5>
                                    <div class="book-info small">
                                        <p class="mb-2">
                                            <i class="fas fa-user text-primary"></i>
                                            <span class="ms-2">@book.Author.AuthorName</span>
                                        </p>
                                        <p class="mb-2">
                                            <i class="fas fa-tag text-primary"></i>
                                            <span class="ms-2">@book.Category.CategoryName</span>
                                        </p>
                                        <p class="mb-3">
                                            <i class="fas fa-building text-primary"></i>
                                            <span class="ms-2">@book.Publisher.PublisherName</span>
                                        </p>
                                    </div>
                                    <a asp-page="/Home/ShopDetails" asp-route-id="@book.BookId" class="view-detail-btn">
                                        <i class="fas fa-eye me-2"></i>View detail
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center">
                        <p class="text-muted">No related books available.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>