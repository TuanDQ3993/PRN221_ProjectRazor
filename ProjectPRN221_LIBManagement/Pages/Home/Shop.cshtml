@page
@model ProjectPRN221_LIBManagement.Pages.Home.ShopModel
@using ProjectPRN221_LIBManagement.Models;
@{
    Layout = "_UserLayout";
}



<style>

    .fruite-item {
        height: 100%;
        display: flex;
        flex-direction: column;
        background-color: #fff;
    }

    .fruite-categorie .active {
        color: #your-primary-color;
        font-weight: bold;
    }

    .fruite-img {
        position: relative;
        padding-top: 75%;
        overflow: hidden;
    }

        .fruite-img img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .p-4 {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

        .p-4 h4 {
            font-size: 1.1rem;
            line-height: 1.4;
            margin-bottom: 0.5rem;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            height: 2.8em;
        }

        .p-4 p {
            margin-bottom: 0.5rem;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

    .d-flex {
        margin-top: auto;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .text-dark {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        max-width: 100%;
    }

    .btn {
        white-space: nowrap;
        margin-left: auto;
    }

</style>





<div class="container-fluid fruite py-5">
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a asp-page="home">Home</a></li>
        <li class="breadcrumb-item"><a asp-page="shop">Shop</a></li>

    </ol>
    <div class="container py-5">
        <h1 class="mb-4">Fresh fruits shop</h1>
        <div class="row g-4">
            <div class="col-lg-12">
                <div class="row g-4">
                    <div class="col-xl-3">
                        <form method="get" asp-page="shop">
                            <div class="input-group w-100 mx-auto d-flex">
                                <input type="search" name="search" class="form-control p-3" placeholder="search" value="@Model.searched" aria-describedby="search-icon-1">
                                <span id="search-icon-1" class="input-group-text p-3"><i class="fa fa-search"></i></span>
                            </div>
                        </form>

                    </div>
                    <div class="col-6"></div>
                    <div class="col-xl-3">
                        <div class="bg-light ps-3 py-3 rounded d-flex justify-content-between mb-4">

                            <form id="sortForm" method="get">
                                <label for="sortOrder">Default Sorting:</label>
                                <select id="sortOrder" name="sortOrder" class="border-0 form-select-sm bg-light me-3" onchange="submitForm()">
                                    <option value="Default" selected="@(Model.sortOrdered == "Default" ? "selected" : null)">Default</option>
                                    <option value="Ascending" selected="@(Model.sortOrdered == "Ascending" ? "selected" : null)">Ascending</option>
                                    <option value="Descending" selected="@(Model.sortOrdered == "Descending" ? "selected" : null)">Descending</option>
                                </select>
                            </form>


                        </div>
                    </div>
                </div>
                <div class="row g-4">
                    <div class="col-lg-3">
                        <div class="row g-4">
                            <div class="col-lg-12">
                                <div class="mb-3">
                                    <h4>Categories</h4>
                                    @foreach (var cate in Model.Categories)
                                    {
                                        <ul class="list-unstyled fruite-categorie">
                                            <li>
                                                <div class="d-flex justify-content-between fruite-name">
                                                    <a asp-page="Shop"
                                                       asp-route-cateId="@cate.CategoryId"
                                                       class="@(Model.selectedCate == cate.CategoryId ? "active" : "")">
                                                        <i class="fas fa-apple-alt me-2"></i>@cate.CategoryName
                                                    </a>
                                                    <span></span>
                                                </div>
                                            </li>

                                        </ul>
                                    }


                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="mb-3">
                                    <h4>Authors</h4>
                                    @foreach (var au in Model.Author)
                                    {
                                        <ul class="list-unstyled fruite-categorie">
                                            <li>
                                                <div class="d-flex justify-content-between fruite-name">
                                                    <a asp-page="Shop"
                                                       asp-route-auId="@au.AuthorId"
                                                       class="@(Model.selectedAu == au.AuthorId ? "active" : "")">
                                                        <i class="fas fa-apple-alt me-2"></i>@au.AuthorName
                                                    </a>
                                                    <span></span>
                                                </div>
                                            </li>

                                        </ul>
                                    }


                                </div>
                            </div>

                            <div class="col-lg-12">
                                <div class="mb-3">
                                    <h4>Publicsher</h4>
                                    @foreach (var pu in Model.Publisher)
                                    {
                                        <ul class="list-unstyled fruite-categorie">
                                            <li>
                                                <div class="d-flex justify-content-between fruite-name">
                                                    <a asp-page="Shop"
                                                       asp-route-pubId="@pu.PublisherId"
                                                       class="@(Model.selectedPub == pu.PublisherId ? "active" : "")">
                                                        <i class="fas fa-apple-alt me-2"></i>@pu.PublisherName
                                                    </a>
                                                    <span></span>
                                                </div>
                                            </li>

                                        </ul>
                                    }
                                </div>
                            </div>

                            <div class="col-lg-12">
                            </div>
                            <div class="col-lg-12">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-9">
                        <div class="row g-4 ">
                            @foreach (var book in Model.Books)
                            {
                                <div class="col-md-6 col-lg-6 col-xl-4">
                                    <a href="#" class="product-link">
                                        <div class="rounded position-relative fruite-item">
                                            <div class="fruite-img">
                                     
                                                <img src="@book.Image" class="img-fluid w-100 rounded-top" alt="">
                                            </div>
                                            @* <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">Fruits</div> *@
                                            <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                                                <h4>@book.Title</h4>
                                                <p class="fa fa-tag me-2"> @book.Category.CategoryName</p>
                                                <p class="fa fa-user me-2">@book.Author.AuthorName</p>
                                                <div class="d-flex justify-content-between flex-lg-wrap">
                                                    <p class="fa fa-building me-2 fs-5 mb-0">Publisher: @book.Publisher.PublisherName</p>
                                                    <a href="#" class="btn border border-secondary rounded-pill px-3 text-primary"><i class="fa fa-shopping-bag me-2 text-primary"></i> Add to cart</a>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            }
                            <div class="col-12">
                                <div class="pagination d-flex justify-content-center mt-5">
                                    <a href="#" class="rounded">&laquo;</a>
                                    <a href="#" class="active rounded">1</a>
                                    <a href="#" class="rounded">2</a>
                                    <a href="#" class="rounded">3</a>
                                    <a href="#" class="rounded">4</a>
                                    <a href="#" class="rounded">5</a>
                                    <a href="#" class="rounded">6</a>
                                    <a href="#" class="rounded">&raquo;</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function submitForm() {
        document.getElementById("sortForm").submit();
    }
</script>