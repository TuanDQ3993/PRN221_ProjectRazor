@page
@model ProjectPRN221_LIBManagement.Pages.Home.AccessDeniedModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" >
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>403 Forbidden</title>
    <style>
        body, h1, h2, p, a {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* General body styles */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            color: #333;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        /* Container to center content */
        .container {
            text-align: center;
        }

        /* Error code styling */
        .error-code {
            font-size: 120px;
            color: #e74c3c;
            margin-bottom: 10px;
        }

        /* Error message styling */
        .error-message {
            font-size: 36px;
            color: #555;
            margin-bottom: 20px;
        }

        /* Error description styling */
        .error-description {
            font-size: 18px;
            color: #777;
            margin-bottom: 30px;
        }

        /* Back to home button styling */
        .back-home {
            font-size: 16px;
            color: #3498db;
            text-decoration: none;
            border: 2px solid #3498db;
            border-radius: 5px;
            padding: 10px 20px;
            transition: background-color 0.3s, color 0.3s;
        }

            .back-home:hover {
                background-color: #3498db;
                color: #fff;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="error-content">
            <h1 class="error-code">403</h1>
            <h2 class="error-message">Forbidden</h2>
            <p class="error-description">You don't have permission to access this page.</p>
            <a href="/" class="back-home">Back to Home</a>
        </div>
    </div>
</body>
</html>
