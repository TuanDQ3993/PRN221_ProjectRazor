                                <div class="nav-user-info">
                                    <h5 class="mb-0 text-white nav-user-name">Admin </h5>
                                    
                                </div>
                                <a class="dropdown-item" href="/"><i class="fas fa-user mr-2"></i>Home</a>
                                <a class="dropdown-item" href="/logout"><i class="fas fa-power-off mr-2"></i>Logout</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4 nav-left-sidebar sidebar-dark">

                <div class="menu-list">
                    <nav class="navbar navbar-expand-lg navbar-light">
                        <a class="d-xl-none d-lg-none" href="#">Dashboard</a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav flex-column">
                                <li class="nav-divider">
                                    Menu
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @GetActiveClass("/Admin/Dashboard")" asp-page="/Admin/Dashboard">
                                        <i class="fas fa-fw fa-chart-pie"></i>
                                        Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @GetActiveClass("/Admin/BooksManage")" asp-page="/Admin/BooksManage">
                                        <i class="fas fa-fw fa-chart-pie"></i>
                                        Book Manager
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link @GetActiveClass("/Admin/UserManage")" asp-page="/Admin/UserManage">
                                        <i class="fas fa-fw fa-chart-pie"></i>
                                        User Manager
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link @GetActiveClass("/Admin/TransactionsManage")" asp-page="/Admin/TransactionsManage">
                                        <i class="fas fa-fw fa-chart-pie"></i>
                                        Transactions Manager
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link @GetActiveClass("/Admin/PublisherManage")" asp-page="/Admin/PublisherManage">
                                        <i class="fas fa-fw fa-chart-pie"></i>
                                        Publisher Manager
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link @GetActiveClass("/Admin/AuthorsManage")" asp-page="/Admin/AuthorsManage">
                                        <i class="fas fa-fw fa-chart-pie"></i>
                                        Authors Manager
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link @GetActiveClass("/Admin/CategorysManage")" href="/Admin/CategorysManage">
                                        <i class="fas fa-fw fa-chart-pie"></i>
                                        Categories Manager
                                    </a>
                                </li>
                        </div>
                        </li>
                        </ul>
                </div>
                </nav>

            </div>

            <div class="dashboard-wrapper" style="width: 100%;">
                <div class="container-fluid  dashboard-content">

                    @RenderBody()

                </div>
            </div>
        </div>

    </div>

    <footer class="border-top footer text-muted">
        <div class="footer">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                        Copyright © 2018 Concept. All rights reserved. Dashboard by <a href="https://colorlib.com/wp/">Colorlib</a>.
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                        <div class="text-md-right footer-links d-none d-sm-block">
                            <a href="javascript: void(0);">About</a>
                            <a href="javascript: void(0);">Support</a>
                            <a href="javascript: void(0);">Contact Us</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>